<%- include("partials/head", {styles: ['ingreso','style-carrito']}) %>
<!-- enctype="multipart/form-data -->
<body>
    <%- include("partials/header") %>
    <main class="main-carrito">
        <form action="/user/create" method="post" enctype="multipart/form-data">              
            <div class="container">
                <h1>Crea tu cuenta</h1>
                <div class="form-container">
                    <label for="first_name">Nombre</label>
                    <input type="text" name="first_name" id="nombre" value="<%= locals.oldData ? oldData.first_name : null%>">
                    <div class="error-message" id="error-name"></div>
                    <% if (locals.errors && errors.first_name) { %>
                        <div class="text-danger">
                            <%= errors.first_name.msg %>
                        </div>
                    <% } %>
                </div>
                <div class="form-container">
                    <label for="last_name">Apellido</label>
                    <input type="text" name="last_name" id="apellido" value=" <%= locals.oldData ? oldData.last_name : null%>">
                    <div class="error-message" id="error-name"></div>
                    <% if (locals.errors && errors.last_name) { %>
                        <div class="text-danger">
                            <%= errors.last_name.msg %>
                        </div>
                        <% } %>
                </div>
                <div class="form-container">
                    <label for="email">Correo electronico</label>
                <input type="email" name="email" id="email" value=" <%= locals.oldData ? oldData.email : null%>">
                <div class="error-message" id="error-name"></div>
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %>
                        </div>
                        <% } %>
                </div>
                <div class="form-container">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" id="password" value="<%= locals.oldData ? oldData.password : null %>">
                    <div class="error-message" id="error-name"></div>
                    <% if (locals.errors && errors.password) {%>
                        <div class="text-danger">
                            <%= errors.password.msg %>
                        </div>
                        <% } %>
                </div>
                <!-- <div class="form-container">
                    <label for="password">Repetir contraseña</label>
                    <input type="password" name="passwordasd" id="passwordasd">
                </div> -->
                <div class="form-container">
                    <label for="postal_code">Código Postal</label>
                    <input type="text" name="postal_code" id="postal_code">
                </div>
                <div class="form-container">
                    <label for="adress">Direccion</label>
                    <input type="text" name="adress" id="adress">
                </div>
                <div class="form-container">
                    <label for="phone">Telefono</label>
                    <input type="text" name="phone" id="phone" >
                </div>
            </div>
            <div class="form-container">
                <label for="img">Foto de perfil</label>
                <input type="file" name="img" id="img">
                <p class="text-danger" id="error-profile_pic"></p>
            </div>
            <div class="boton-carrito">                    
                <button type="submit" class="button-ingreso" value="Registrar">Crear</button>
            </div>
        </form>
    </main>
    <%- include("partials/footer") %>
</body>
</html>