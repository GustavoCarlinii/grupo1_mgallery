<%- include("partials/head", {styles: ['ingreso','style-carrito']}) %>
<body>
    <%- include("partials/header") %>
    <main class="main-carrito">
        <form action="/products/create" method="post" enctype="multipart/form-data">
            <h1>Crea tu obra</h1>
            <div class="container">
                <div class="form-container">
                    <label for="name">Nombre de la obra</label>
                    <input type="text" name="name" id="name">
                </div>
                <div class="form-container">
                    <label for="prices">Precio $</label>
                    <input type="text" name="prices" id="prices">
                </div>
                <div class="form-container">
                    <label for="description">Descripcion</label>
                    <input type="text" name="description" id="description">
                </div>
                <div class="form-container">
                    <label for="img">Imagen del producto</label>
                    <input type="file" name="img" id="img">
                </div>
                <div class="boton-carrito">
                    <button class="button-ingreso" type="submit" value="Registrar">Crear</button>
                </div>
            </div>
        </form>
    </main>
    <%- include("partials/footer") %>
</body>
</html>