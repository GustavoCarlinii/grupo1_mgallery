    <%- include("partials/head", {styles: ['ingreso','style-carrito']}) %>
    <body>
        <%- include("partials/header") %>
        <main class="main-carrito">
            <form action="/user/update/:id" method="post">
                <h1>Edita tus perfil</h1>
                <div class="container">
                    <div class="form-container">
                        <label for="nombre">Nombre</label>
                        <input type="text" name="first_name" id="nombre">
                    </div>
                    <div class="form-container">
                        <label for="apellido">Apellido</label>
                        <input type="text" name="last_name" id="apellido">
                    </div>
                    <div class="form-container">
                        <label for="email">Correo electronico</label>
                        <input type="email" name="email" id="email">
                    </div>
                    <div class="form-container">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" id="password">
                    </div>
                    <div class="form-container">
                        <label for="password">Repetir contraseña</label>
                        <input type="password" name="passwordasd" id="passwordasd">
                    </div>
                    <div class="form-container">
                        <label for="postal_code">Código Postal</label>
                        <input type="text" name="postal_code" id="postal_code">
                    </div>
                    <div class="form-container">
                        <label for="phone">Telefono</label>
                        <input type="text" name="phone" id="phone">
                    </div>
                    <div class="form-container">
                        <label for="adress">Direccion</label>
                        <input type="text" name="adress" id="adress">
                    </div>
                </div>
                <div class="boton-carrito">
                    <button type="reset">Borrar</button>
                    <button type="submit" value="Registrar">Guardar</button>
                </div>
            </form>
        </main>
        <%- include("partials/footer") %>
</body>
</html>